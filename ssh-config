Host *
    ServerAliveInterval 30
    ServerAliveCountMax 4

Host scaff-prod
  HostName www.scaffsmartpro.com
  User weedom
  ForwardAgent yes
  RequestTTY yes
  RemoteCommand sh -c 'cd ~/main/ 2>/dev/null && exec bash'

Host scaff-staging
  HostName staging.scaffsmartpro.com
  User weedom
  ForwardAgent yes
  RequestTTY yes
  RemoteCommand sh -c 'cd ~/main/ 2>/dev/null && exec bash'

Host scaff-staging-tmux
  HostName staging.scaffsmartpro.com
  User weedom
  ForwardAgent yes
  RequestTTY yes
  RemoteCommand sh -c '[ -t 1 ] && export TERM=xterm-256color && cd ~/main 2>/dev/null; exec tmux new-session -A -s main || exec bash'

Host scaff-prod-tmux
  HostName www.scaffsmartpro.com
  User weedom
  ForwardAgent yes
  RequestTTY yes
  RemoteCommand sh -c '[ -t 1 ] && export TERM=xterm-256color && cd ~/main 2>/dev/null; exec tmux new-session -A -s main || exec bash'

